
#include <iostream>

using namespace std;

class Zwierz {
public:
	int waga;
	int nogi;

	Zwierz() {
		nogi = 0;
		waga = 0;
		cout << "konstruktor bezparametrowy" << endl;
	}

	Zwierz(int nogi, int waga) {
		this->waga = waga;
		this->nogi = nogi;
		cout << "konstruktor parametrowy" << endl;
	}

	~Zwierz() {
		cout << "destruktor klasy" << endl;
	}
	
};

class Ssak{}; // 

class Kon : public Zwierz {
	int ogon;
public:
	Kon(int waga, int nogi, int ogon) {
		this->waga = waga;
		this->nogi = nogi;
		this->ogon = ogon;
		cout << "konstruktor parametrowy" << endl;
	}

	Kon() {
		nogi = 0;
		waga = 0;
		ogon = 0;
		cout << "konstruktor bezparametrowy" << endl;
	}

	~Kon() {
		cout << "destruktor klasy" << endl;
	}

	void print() {
		std::cout << "Waga konia: " << waga << "kg" << std::endl;
		std::cout << "Dlugosc ogonu konia: " << ogon << "cm" << std::endl;
		std::cout << "Ilosc nog konia: " << nogi << std::endl;
	}
};

class Slon : public Zwierz {
	int ogon;
	int traba;
public:
	Slon(int waga, int nogi, int ogon, int traba) {
		this->waga = waga;
		this->nogi = nogi;
		this->ogon = ogon;
		this->traba = traba;
		cout << "konstruktor parametrowy" << endl;
	}

	Slon() {
		waga = 0;
		nogi = 0;
		ogon = 0;
		traba = 0;
		cout << "konstruktor bezparametrowy" << endl;
	}

	~Slon() {
		cout << "destruktor klasy" << endl;
	}

	void print() {
		cout << "Waga Slonia: " << waga << "kg" << endl;
		cout << "Ilosc nog Slonia: " << nogi << endl;
		cout << "Dlugosc ogonu Slonia: " << ogon << "cm" << endl;
		cout << "Dlugosc traby Slonia: " << traba << "cm" << endl;
	}
};

class Strus : public Zwierz {
	int szyja;

public:
	Strus(int waga, int nogi, int szyja) {
		this->waga = waga;
		this->nogi = nogi;
		this->szyja = szyja;
		cout << "konstruktor parametrowy" << endl;
	}

	Strus() {
		waga = 0;
		nogi = 0;
		szyja = 0;
		cout << "konstruktor bezparametrowy" << endl;
	}

	~Strus() {
		cout << "destruktor klasy" << endl;
	}

	void print() {
		cout << "Waga Strusia: " << waga << "kg" << endl;
		cout << "Ilosc nog Strusia: " << nogi << endl;
		cout << "Dlugosc szyji Strusia: " << szyja << "cm" << endl;
	}
};

int main() {
	Kon ob1(450, 4, 15);
	Slon ob2(3540, 4, 20, 25);
	Strus ob3(120, 2, 23);

	ob1.print();
	cout << endl;
	ob2.print();
	cout << endl;
	ob3.print();

	system("Pause");
	return 0;
}
